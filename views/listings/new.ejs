<% layout('layouts/boilerplate') %> 
<body>
    <div class="row">
        <div class="col-8 offset-2 mb-3">
            <br><br>
            <h3>Create a New Listing</h3>
            <br>
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingTitle" name="listing[title]" placeholder="Enter Title" required>
                    <label for="floatingTitle">Title</label>
                    <div class="invalid-feedback">Title cannot be empty.</div>
                </div>
                <div class="form-floating mb-3">
                    <textarea class="form-control" placeholder="Enter description" id="floatingDescription" name="listing[description]" style="height: 100px" required></textarea>
                    <label for="floatingDescription">Description</label>
                    <div class="invalid-feedback">Description cannot be empty.</div>
                </div>

                <!-- <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingUrl" name="listing[image][url]" placeholder="Enter Image URL">
                    <label for="floatingUrl">Image link/URL</label>
                </div> -->

                <div class="mb-3">
                    <label for="image" class="form-label">Upload listing image &nbsp;<small class="text-muted fst-italic"> (max: 5MB)</small></label>
                    <input type="file" name="listing[image]" class="form-control" id="image">
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="input-group">
                            <span class="input-group-text rupee-symbol">&#8377;</span>
                            <div class="form-floating">
                                <input type="number" class="form-control" id="floatingPrice" name="listing[price]" placeholder="Price" required min="0">
                                <label for="floatingPrice">Price</label>
                                <div class="invalid-feedback">Please enter a valid price.</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <!-- <label for="category" class="form-label">Category</label> -->
                        <select class="form-select" id="category" name="listing[category]" required style="height: 58px;">
                            <option disabled selected value="">Select a category</option>
                            <option value="Rooms">Rooms</option>
                            <option value="Iconic cities">Iconic cities</option>
                            <option value="Mountains">Mountains</option>
                            <option value="Castles">Castles</option>
                            <option value="Beaches">Beaches</option>
                            <option value="Camping">Camping</option>
                            <option value="Farms">Farms</option>
                            <option value="Arctic">Arctic</option>
                        </select>
                        <div class="invalid-feedback">
                            Please select a category.
                        </div>
                    </div>
                </div>
                <!-- <div class="mb-3 position-relative">
                    <div class="input-group has-validation" style="height: 58px;">
                        <span class="input-group-text">&#8377;</span>
                        <input 
                            type="number" 
                            class="form-control" 
                            id="floatingPrice" 
                            name="listing[price]" 
                            placeholder="Enter price"
                            required 
                            min="0"
                        >
                        <div class="invalid-feedback">
                            Please enter a valid price.
                        </div>
                    </div>
                </div> -->

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="floatingLocation" name="listing[location]" placeholder="Enter Location" required>
                            <label for="floatingLocation">Location</label>
                            <div class="invalid-feedback">Please enter name of location.</div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingCountry" name="listing[country]" placeholder="Country" required>
                            <label for="floatingCountry">Country</label>
                            <div class="invalid-feedback">Please enter name of country.</div>
                        </div>
                    </div>
                </div>
                

                <button class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>
</body>