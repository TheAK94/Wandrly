<% layout('layouts/boilerplate') %> 
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3 class="mb-3">Listing Details</h3>

            <div class="card">
                <img src="<%=listing.image.url%>" class="card-img-top show-img mb-3" alt="listing-img">
                <div class="card-body">
                    <h5 class="card-title"><%= listing.title %></h5>
                    <p class="card-text">
                        <%= listing.description %> <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                        <%= listing.location %>, <%= listing.country %>
                    </p>
                </div>
            </div>
            <div class="btns">
                <a href="/listings/<%=listing._id%>/edit" class="btn btn-primary" style="width: 100px;">Edit</a>
                <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
                    <button class="btn btn-danger offset-4" style="width: 100px;">Delete</button>
                </form>
            </div>
        </div>
    </div>
    
</body>
